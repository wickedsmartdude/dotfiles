" set tabstop 4
set tabstop=4

" set autoindent
set autoindent

let mapleader= ","

" mapping for deleting line without exiting insert mode
inoremap <leader>- <esc>ddi<CR>

" vertical split
nnoremap <leader>vs :vsplit<CR>

" TODO mapping for editing .vimrc file efficiently
nnoremap <leader>ev :vsplit $MYVIMRC<CR>

" searching options

set incsearch
set ignorecase
set smartcase

